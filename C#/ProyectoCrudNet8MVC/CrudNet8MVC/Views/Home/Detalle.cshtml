@model CrudNet8MVC.Models.Producto
@{
    ViewData["Title"] = "Detalle del Producto";
}

<h1 class="display-4 text-center">Producto</h1>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle del Producto</strong></h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong> @Html.DisplayFor(m=>m.Nombre)</li>
                    <li class="list-group-item"><strong>Categoria: </strong> @Html.DisplayFor(m => m.Categoria)</li>
                    <li class="list-group-item"><strong>Precio: </strong> @Html.DisplayFor(m => m.Precio)</li>
                    <li class="list-group-item"><strong>Stock: </strong> @Html.DisplayFor(m => m.Stock)</li>
                </ul>
                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>          
        </div>
    </div>
</div>