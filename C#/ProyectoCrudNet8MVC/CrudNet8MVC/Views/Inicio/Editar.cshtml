@model CrudNet8MVC.Models.Contacto
@{
    ViewData["Title"] = "Editar contactos";
}
<h1 class="text-center">Lista de contactos Con .Net 8</h1>

<div class="row">
    <div class="offset-12">
        <div class="card-header bg-dark">
            <h3 class="text-white"><strong>Editar usuarios</strong></h3>
        </div>
        <div class="card-body">
            <form asp-action="Editar">
                <!-- Id usuario oculto-->
                <input type="hidden" asp-for="Id" />
                
                <div asp-validation-summary="ModelOnly" class="txt-danger"></div>
                

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Apellidos" class="control-label">Apellidos: </label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ingresa el apellido" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email: </label>
                    <input asp-for="Email" class="form-control" placeholder="Ingresa el Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Telefono" class="control-label">Telefono: </label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ingresa el Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Celular" class="control-label">Celular: </label>
                    <input asp-for="Celular" class="form-control" placeholder="Ingresa el Celular" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario" class="control-label">Usuario: </label>
                    <input asp-for="Usuario" class="form-control" placeholder="Ingresa el Usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Codigo" class="control-label">Contraseña: </label>
                    <input asp-for="Codigo" class="form-control" placeholder="Ingresa el Contraseña" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>

                <div class="form-group mt-5">
                    <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar cambios </button>
                </div>
            </form>

            <a asp-controller="Inicio" asp-action="Index">Volver</a>
        </div>
    </div>
</div>
