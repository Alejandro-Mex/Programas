@model SDA.Models.Sexo
@{
    ViewData["Title"] = "Crear genero";
}

<h1 class="display-4 text-center">Genero</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear Genero</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="SexoCrear" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NombreSexo" class="control-label"></label>
                        <input asp-for="NombreSexo" class="form-control" placeholder="Nombre del genero" />
                        <span asp-validation-for="NombreSexo" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto">
                            <i class="fa fa-book" aria-hidden="true"></i>Guardar Genero
                        </button>
                    </div>

                </form>
                <a asp-controller="Home" asp-action="ConsultaSexo">Volver</a>
            </div>
        </div>
    </div>
</div>
