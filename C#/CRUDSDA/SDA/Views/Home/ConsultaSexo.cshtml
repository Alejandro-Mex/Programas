@model IEnumerable<SDA.Models.Sexo>

@{
    ViewData["Title"] = "Consulta generos";
}

<h1 class="display-4 text-center">Lista de Generos</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="SexoCrear" asp-controller="Home" class="btn btn-primary d-block mx-auto btn-lg">
            <i class="fa fa-plus-square" aria-hidden="true"></i> Nuevo Genero
        </a>
    </div>
</div>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Lista de generos</strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblPropietario" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.IdSexo)</th>
                                    <th>@Html.DisplayNameFor(m => m.NombreSexo)</th>
                                    <th>Operaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.IdSexo)</td>
                                        <td>@Html.DisplayFor(m => item.NombreSexo)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="SexoEditar" asp-route-id="@item.IdSexo">
                                                <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                            </a>

                                            <a class="btn btn-danger" asp-action="SexoBorrar" asp-route-id="@item.IdSexo">
                                                <i class="fa fa-trash" aria-hidden="true"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>